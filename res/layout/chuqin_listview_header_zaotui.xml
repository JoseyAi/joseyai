<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_experience_content_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#0000ff"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/zt_name"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:singleLine="true"
        android:textColor="#aaffffff"
        android:text="姓名"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/zt_number"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:singleLine="true"
        android:textColor="#aaffffff"
        android:text="学号"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/zt_xibie"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:singleLine="true"
        android:textColor="#aaffffff"
        android:text="系别"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/zt_banji"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:singleLine="true"
        android:textColor="#aaffffff"
        android:text="班级"
        android:textSize="14sp" />
    
    <TextView
        android:id="@+id/zt_course"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:singleLine="true"
        android:textColor="#aaffffff"
        android:text="早退课程"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/zt_reason"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:singleLine="true"
        android:textColor="#aaffffff"
        android:text="早退原因"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/zt_quxiang"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:singleLine="true"
        android:textColor="#aaffffff"
        android:text="早退去向"
        android:textSize="14sp" />

</LinearLayout>